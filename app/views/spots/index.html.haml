%h1 Listing spots

%table
  %thead
    %tr
      %th Latitude
      %th Longitude
      %th Radius
      %th
      %th
      %th

  %tbody
    - @spots.each do |spot|
      %tr
        %td= spot.latitude
        %td= spot.longitude
        %td= spot.radius
        %td= link_to 'Show', spot
        %td= link_to 'Edit', edit_spot_path(spot)
        %td= link_to 'Destroy', spot, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Spot', new_spot_path
